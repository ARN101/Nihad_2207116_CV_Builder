<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cv_builder.CVPreviewController"
            style="-fx-background-color: white;">

    <top>
        <HBox spacing="30" alignment="CENTER_LEFT" style="-fx-background-color: #2c3e50; -fx-padding: 40;">
            <ImageView fx:id="profilePhoto" fitWidth="150" fitHeight="150" preserveRatio="true"
                       style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 15, 0, 0, 3);"/>

            <VBox spacing="10" alignment="CENTER_LEFT">
                <Label fx:id="nameLabel" wrapText="true" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                <Label fx:id="emailLabel" wrapText="true" style="-fx-font-size: 16px; -fx-text-fill: #ecf0f1;"/>
                <Label fx:id="phoneLabel" wrapText="true" style="-fx-font-size: 16px; -fx-text-fill: #ecf0f1;"/>
                <Label fx:id="addressLabel" wrapText="true" style="-fx-font-size: 14px; -fx-text-fill: #bdc3c7;"/>
            </VBox>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: white; -fx-background: white;">
            <VBox spacing="30" style="-fx-padding: 50; -fx-background-color: white;">

                <VBox spacing="10">
                    <Label text="EDUCATION" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Separator style="-fx-background-color: #3498db;"/>
                    <Label fx:id="educationLabel" wrapText="true" style="-fx-font-size: 14px; -fx-text-fill: #34495e; -fx-padding: 10 0 0 0;"/>
                </VBox>

                <VBox spacing="10">
                    <Label text="SKILLS" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Separator style="-fx-background-color: #3498db;"/>
                    <Label fx:id="skillsLabel" wrapText="true" style="-fx-font-size: 14px; -fx-text-fill: #34495e; -fx-padding: 10 0 0 0;"/>
                </VBox>

                <VBox spacing="10">
                    <Label text="WORK EXPERIENCE" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Separator style="-fx-background-color: #3498db;"/>
                    <Label fx:id="workExperienceLabel" wrapText="true" style="-fx-font-size: 14px; -fx-text-fill: #34495e; -fx-padding: 10 0 0 0;"/>
                </VBox>

                <VBox spacing="10">
                    <Label text="PROJECTS" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Separator style="-fx-background-color: #3498db;"/>
                    <Label fx:id="projectsLabel" wrapText="true" style="-fx-font-size: 14px; -fx-text-fill: #34495e; -fx-padding: 10 0 0 0;"/>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 20; -fx-background-color: #ecf0f1;">
            <Button text="Close Preview" onAction="#handleClose"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-padding: 12 30; -fx-font-size: 14px; -fx-font-weight: bold;"/>
        </HBox>
    </bottom>

</BorderPane>