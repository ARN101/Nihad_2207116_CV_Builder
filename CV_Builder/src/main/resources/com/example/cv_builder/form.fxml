<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cv_builder.FormController">
    <Label text="Full Name:" layoutX="50" layoutY="50"/>
    <TextField fx:id="fullNameField" layoutX="150" layoutY="50" prefWidth="200"/>

    <Label text="Email:" layoutX="50" layoutY="100"/>
    <TextField fx:id="emailField" layoutX="150" layoutY="100" prefWidth="200"/>

    <Label text="Phone Number:" layoutX="50" layoutY="150"/>
    <TextField fx:id="phoneField" layoutX="150" layoutY="150" prefWidth="200"/>

    <Label text="Education:" layoutX="50" layoutY="200"/>
    <TextArea fx:id="educationField" layoutX="150" layoutY="200" prefWidth="200" prefHeight="100"/>

    <Label text="Skills:" layoutX="50" layoutY="320"/>
    <TextArea fx:id="skillsField" layoutX="150" layoutY="320" prefWidth="200" prefHeight="100"/>

    <Button text="Generate CV" layoutX="150" layoutY="450" onAction="#handleGenerateCV"/>
</AnchorPane>
